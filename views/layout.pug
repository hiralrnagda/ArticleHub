doctype html
html 
    head 
        title ArticleHub
        link(rel='icon' href='https://image.flaticon.com/icons/png/128/2892/2892879.png') 
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark.justify-content-end
            .container
                .navbar-header
                    button.navbar-toggle.collapse(type='button' data-bs-toggle='collapse' data-bs-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
                        span.sr-only Toggle navigation
                        span.navbar-toggler-icon
                    a.navbar-brand(href='/') ArticleHub
                #navbarsExampleDefault.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-md-0.mr-auto 
                        li.nav-item
                            a.nav-link(aria-current='page' href='/') Home
                        if user
                            li.nav-item
                                a.nav-link(href='/articles/add') Add Articles
                    ul.navbar-nav.me-auto.mb-2.mb-md-0
                        if user
                            li.nav-item 
                                a.nav-link(href='/users/logout') Logout
                        else                            
                            li.nav-item
                                a.nav-link(href='/users/register') Register
                            li.nav-item
                                a.nav-link(href='/users/login') Login
        .container
            br
            != messages('message', locals)
            block content 
            br
            hr
            footer 
                p Copyright &copy; 2021
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')
